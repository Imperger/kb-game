{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "env": { "NODE_EXTRA_CA_CERTS": "./.vscode/certs/root.crt" },
            "args": [
                "${workspaceFolder}/src/main.ts",
                "-c",
                "config/settings.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend Test",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "env": { 
                "NODE_EXTRA_CA_CERTS": "./.vscode/certs/root.crt", 
                "NODE_ENV": "test" },
            "args": [
                "${workspaceFolder}/src/main.ts",
                "-c",
                "config/settings.json"
            ]
        }
    ]
}